<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB9680">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="301dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        android:text="¡Bienvenidx!"
        android:textColor="#333333"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomusuarios"
        android:layout_width="329dp"
        android:layout_height="70dp"
        android:layout_marginTop="144dp"
        android:text="NomUsuario"
        android:textColor="#333333"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="328dp"
        android:layout_height="88dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Añade a un jugador más para poder comenzar con el juego"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <EditText
        android:id="@+id/invitado"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="124dp"
        android:background="#FFFFFF"
        android:hint="Nombre de Invitado"
        android:inputType="text"
        android:padding="12dp"
        android:rotationY="0"
        android:textColor="#333333"
        android:textColorHint="#171616"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcion" />


    <Button
        android:id="@+id/btn_jugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/round_button"
        android:text="¡Jugar!"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invitado" />

    <TextView
        android:id="@+id/logo_is"
        android:layout_width="245dp"
        android:layout_height="173dp"
        android:background="@drawable/logosinfondo"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_jugar"
        app:layout_constraintVertical_bias="0.966" />



</androidx.constraintlayout.widget.ConstraintLayout>