<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB9680">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AB9680">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="301dp"
            android:layout_height="58dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:text="¡Bienvenidx!"
            android:textColor="#333333"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nomusuarios"
            android:layout_width="329dp"
            android:layout_height="70dp"
            android:layout_marginTop="104dp"
            android:text="NomUsuario"
            android:textColor="#333333"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="328dp"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Añade a un jugador más para poder comenzar con el juego"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomusuarios" />

        <Button
            android:id="@+id/btn_jugar"
            android:layout_width="132dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="116dp"
            android:background="@drawable/round_button"
            android:text="¡Jugar!"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            app:layout_constraintStart_toEndOf="@+id/descripcion"
            app:layout_constraintTop_toBottomOf="@+id/invitado" />

        <EditText
            android:id="@+id/invitado"
            android:layout_width="173dp"
            android:layout_height="52dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="104dp"
            android:background="#FFFFFF"
            android:hint="Nombre de Invitado"
            android:inputType="text"
            android:padding="12dp"
            android:rotationY="0"
            android:textColor="#333333"
            android:textColorHint="#171616"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/nomusuarios"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logo_is"
            android:layout_width="213dp"
            android:layout_height="134dp"
            android:layout_marginTop="304dp"
            android:background="@drawable/logosinfondo"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>